<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include _meta-css %>

    </head>
    <body class="main-body">

        <div class="navbar navbar-inverse navbar-fixed-top nav-3d">
            <div class="navbar-inner">
                <div class="container">
                    <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="brand" href="/"><i class="icon-cloud"></i>&nbsp;三维云</a>
                    <div class="nav-collapse collapse">
                        <ul class="nav">
                            <li class="active">
                                <a href="/posts"><i class="icon-th"></i><strong>&nbsp;浏览</strong></a>
                            </li>
                            <li>
                                <a href="/posts/new"><i class="icon-cloud-upload"></i><strong>&nbsp;上传</strong></a>
                            </li>
                            <li>
                                <a href="/about"><i class="icon-book"></i><strong>&nbsp;我们</strong></a>
                            </li>
                        </ul>
                        <ul class="nav pull-right nav-user">
                            <% var user = request.session.user; if (user) { %>
                                <li class="dropdown">
                                    <a class="dropdown-toggle"  href="#" data-toggle="dropdown">
                                        <%- user.name %>
                                        <b class="caret"></b>

                                    </a>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a href='/user'><i class="icon-user"></i>我的资料</a>
                                        </li>
                                    </ul>
                                </li>
                                <li>
                                    <a href='/logout'><i class="icon-signout"></i>
                                        退出
                                    </a>
                                </li>
                            <% }else{ %>
                                <li>

                                    <a href="/enter">
                                        <i class="icon-signin"></i>
                                        登录
                                    </a>
                               </li>
                                <li >
                                     <a href="/signup">
                                         <i class=" icon-user-md"></i>
                                        注册
                                     </a>
                                </li>
                            <% }; %>

                        </ul>
                    </div>

                </div>
            </div>
        </div>


        <div class="main-content">
            <div class="container">
                <% var flash = request.flash('info').pop(); if (flash) { %>
                    <input id='tip-info' type='hidden' value='<%- flash %>'>
                    <input id='tip-info-type' type='hidden' value='SUCCESS'>
                    <script data-main="/javascripts/app/tip-info" src="/javascripts/require.js"></script>


                <% } %>

                <% flash = request.flash('error').pop(); if (flash) { %>
                    <input id='tip-info' type='hidden' value='<%= flash %>'>
                    <input id='tip-info-type' type='hidden' value='ERROR'>
                    <script data-main="/javascripts/app/tip-info" src="/javascripts/require.js"></script>

                <% }; %>
            </div>
            <%- body %>
        </div>
        <hr/>
        <div class="container">
            <footer class="footer" >
                <p>&copy; Company 2013 Build for all love in the world</p>
            </footer>
        </div>
    </body>
</html>

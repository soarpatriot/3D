<!DOCTYPE html>
<html lang="en">
    <head>
        <meta http-equiv="Access-Control-Allow-Origin" content="*">
        <title><%= title %></title>
        <%- stylesheet_link_tag('bootstrap','bootstrap-responsive','font-awesome.min','font-awesome-ie7.min','jquery.fileupload-ui','application','show') %>
        <%- javascript_include_tag('jquery-1.8.0.min', 'bootstrap', 'rails', 'application','three','underscore-min',
            'noty/jquery.noty', 'noty/layouts/top','noty/layouts/topCenter','noty/themes/default', 'masonry.pkgd.min',
            'app/tip'
        )
        %>
        <%- csrf_meta_tag() %>


    </head>
    <body class="main-body">

        <div class="navbar navbar-inverse navbar-fixed-top nav-3d">
            <div class="navbar-inner">
                <div class="container">
                    <a class="brand" href="/"><i class="icon-cloud"></i>&nbsp;3D</a>
                    <div class="nav-collapse.collapse">
                        <ul class="nav">
                            <li class="active">
                                <a href="/posts"><i class="icon-th"></i><strong>&nbsp;浏览</strong></a>
                            </li>
                            <li>
                                <a href="/posts/new"><i class="icon-cloud-upload"></i><strong>&nbsp;上传</strong></a>
                            </li>
                        </ul>
                        <ul class="nav pull-right nav-user">
                            <% var user = request.session.user; if (user) { %>
                                <li class="dropdown">
                                    <a class="dropdown-toggle"  href="#" data-toggle="dropdown">
                                        <%- user.name %>
                                        <b class="caret"></b>

                                    </a>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a href='/user'><i class="icon-user"></i>我的资料</a>
                                        </li>
                                    </ul>
                                </li>
                                <li>
                                    <a href='/logout'><i class="icon-signout"></i>
                                        退出
                                    </a>
                                </li>
                            <% }else{ %>
                                <li>

                                    <a href="/enter">
                                        <i class="icon-signin"></i>
                                        登录
                                    </a>
                               </li>
                                <li >
                                     <a href="/signup">
                                         <i class=" icon-user-md"></i>
                                        注册
                                     </a>
                                </li>
                            <% }; %>

                        </ul>
                    </div>

                </div>
            </div>
        </div>

        <div class="container">
            <% var flash = request.flash('info').pop(); if (flash) { %>
                <script type="text/javascript">
                    $(function(){
                           var message = "<%- flash %>";
                           success(message);
                    })
                </script>
            <% } %>

            <% flash = request.flash('error').pop(); if (flash) { %>
                <script type="text/javascript">
                    $(function(){
                           var message = "<%- flash %>";
                           error(message);
                    })
                </script>
            <% }; %>
        </div>
        <div class="main-content">
            <%- body %>
        </div>
        <hr/>
        <div class="container">
            <footer class="footer" >
                <p>&copy; Company 2013 Build for all love in the world</p>
            </footer>
        </div>
    </body>
</html>

<!DOCTYPE html>
<html lang="en">
    <head>

        <title><%= title %></title>
        <%- stylesheet_link_tag('bootstrap','bootstrap-responsive','application','jquery.fileupload-ui') %>
        <link rel="stylesheet/less" type="text/css" href="/stylesheets/application.less">
        <!-- Force latest IE rendering engine or ChromeFrame if installed -->
        <!--[if IE]><meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"><![endif]-->

        <!-- Bootstrap CSS fixes for IE6 -->
        <!--[if lt IE 7]><link rel="stylesheet" href="http://blueimp.github.com/cdn/css/bootstrap-ie6.min.css"><![endif]-->
        <!-- Bootstrap Image Gallery styles -->
        <link rel="stylesheet" href="http://blueimp.github.com/Bootstrap-Image-Gallery/css/bootstrap-image-gallery.min.css">
        <!-- CSS to style the file input field as button and adjust the Bootstrap progress bars -->
        <link rel="stylesheet" href="/javascripts/fileupload/css/jquery.fileupload-ui.css">
        <!-- CSS adjustments for browsers with JavaScript disabled -->
        <noscript><link rel="stylesheet" href="/javascripts/fileupload/css/jquery.fileupload-ui-noscript.css"></noscript>
        <!-- Shim to make HTML5 elements usable in older Internet Explorer versions -->
        <!--[if lt IE 9]><script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script><![endif]-->
        <%- javascript_include_tag('http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js', 'bootstrap', 'rails', 'application','less-1.3.3.min','three') %>
        <%- javascript_include_tag('noty/jquery.noty', 'noty/layouts/top','noty/layouts/topCenter','noty/themes/default') %>
        <%- javascript_include_tag('app/tip') %>

        <%- csrf_meta_tag() %>

    </head>
    <body>

        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container-fluid">
                    <a class="brand" href="#">3D</a>
                    <div class="nav-collapse.collapse">
                        <ul class="nav">
                            <li class="active">
                                <a href="/">主页</a>
                            </li>
                            <li>
                                <a href="/posts">发布</a>
                            </li>
                        </ul>
                        <ul class="nav pull-right">
                            <% var user = request.session.user; if (user) { %>
                                <li class="dropdown">
                                    <a class="dropdown-toggle"  href="#" data-toggle="dropdown">
                                        <%- user.name %>
                                        <b class="caret"></b>

                                    </a>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a href='/user'>我的资料</a>
                                        </li>
                                    </ul>
                                </li>
                                <li>
                                    <a href='/logout'>
                                        退出
                                    </a>
                                </li>
                            <% }else{ %>
                                <li class="vertical-align li-padding">

                                    <span class="height-auto">



                                            <a href="/enter"> [登录] </a>
                                             &nbsp / &nbsp;
                                            <a href="/signup"> [注册] </a>
                                    </span>
                                </li>
                            <% }; %>

                        </ul>
                    </div>

                </div>
            </div>
        </div>

        <div class="container-fluid">
            <% var flash = request.flash('info').pop(); if (flash) { %>
                <script type="text/javascript">
                    $(function(){
                           var message = "<%- flash %>";
                           success(message);
                    })
                </script>
            <% } %>

            <% flash = request.flash('error').pop(); if (flash) { %>
                <script type="text/javascript">
                    $(function(){
                           var message = "<%- flash %>";
                           error(message);
                    })
                </script>
            <% }; %>
        </div>

        <%- body %>


    </body>
</html>
